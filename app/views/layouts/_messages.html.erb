<% flash.each do |name, msg| %>
  <div class="my-3 shadow-sm container alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissible fade show" role="alert" style="font-size: 12px">
    <%= msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
