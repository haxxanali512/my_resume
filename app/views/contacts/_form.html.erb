<%= render 'contacts/navbar' %>
<div class="container-fluid p-0">
  <%= render 'contacts/resume' %>

  <section class="resume-section ms-5 p-3 px-lg-5 d-flex align-items-center" id="contact">
    <div class="w-100">
      <h2 class="mb-3 text-center">Contact</h2>
      <%= form_with(model: contact) do |form| %>
        <% if contact.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

            <ul>
              <% contact.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row">
          <div class="form-group col-sm-6 mb-2">
            <%= form.label :name, class: 'nameField form-label' %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group col-sm-6 mb-2">
            <%= form.label :email, class: 'emailField form-label' %>
            <%= form.text_field :email, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group mb-2">
          <%= form.label :subject, class: 'subjectField form-label' %>
          <%= form.text_field :subject, class: 'form-control' %>
        </div>

        <div class="form-group mb-2">
          <%= form.label :message, class: 'messageField form-label' %>
          <%= form.text_area :message, class: 'form-control' %>
        </div>

        <div class="actions mt-4">
          <%= form.submit "Submit Here!" %>
        </div>
      <% end %>

    </div>
  </section>
</div>


